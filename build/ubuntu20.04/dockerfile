FROM ubuntu:20.04

RUN  sed -i s@/archive.ubuntu.com/@/mirrors.aliyun.com/@g /etc/apt/sources.list
RUN  apt-get clean

# Apt packages
RUN dpkg --add-architecture i386 && apt-get update && \
    DEBIAN_FRONTEND=noninteractive apt-get install -qy \
    sudo \ 
    git nasm  python3 \
    build-essential \
    python3-dev python3-pip python3-setuptools \
    libc6-dbg \
    libc6-dbg:i386 \
    gcc-multilib \
    gdb-multiarch \
    radare2 \
    zsh \
    qemu-user \
    gcc \
    wget \
    curl \
    vim \
    glibc-source \
    cmake \
    python3-capstone \
    socat \
    netcat \
    ruby-dev \
    lxterminal && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/* && \
    cd ~ && tar -xf /usr/src/glibc/glib*.tar.xz

# python/ruby packages & gdb-plugin
RUN pip3 install --upgrade pip
RUN python3 -m pip install --upgrade pwntools
RUN pip3 install --no-cache-dir ropper ropgadget ancypatch && \
    gem install one_gadget seccomp-tools && \
    rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

# git installaing package
RUN cd ~/ && \
    git clone https://github.com/pwndbg/pwndbg.git && \
    cd ~/pwndbg/ && ./setup.sh && \
    rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

RUN cd ~ && \
    git clone https://github.com/scwuaptx/Pwngdb.git && \
    cp ~/Pwngdb/.gdbinit ~/

# backup
RUN cd ~ && \
	wget -O ~/gdbinit-gef.py -q http://gef.blah.cat/p

RUN sed -i "1c source /root/pwndbg/gdbinit.py" /root/.gdbinit

ENV LANG C.UTF-8

VOLUME ["/pwn"]
WORKDIR /pwn

CMD ["/bin/zsh"]
