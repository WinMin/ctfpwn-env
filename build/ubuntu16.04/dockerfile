FROM ubuntu:16.04

# Apt packages
RUN dpkg --add-architecture i386 && apt-get update && \
    DEBIAN_FRONTEND=noninteractive apt-get install -qy \
    git nasm  python \
    build-essential \
    libffi-dev \
    libevent-dev \
    libssl-dev \
    python-dev python-pip python-setuptools \
    libc6-dbg \
    libc6-dbg:i386 \
    gcc-multilib \
    gdb-multiarch \
    radare2 \
    gcc \
    wget \
    curl \
    vim \
    glibc-source \
    cmake \
    python-capstone \
    socat \
    netcat \
    ruby \
    ruby-dev \
    lxterminal && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/* && \
    cd ~ && tar -xf /usr/src/glibc/glibc-2.23.tar.xz

# python/ruby packages & gdb-plugin
# fix -> "You are using pip version 8.1.1, however version 21.0.1 is available."
# RUN pip install --upgrade pip
RUN pip install --no-cache-dir pwntools ropper ancypatch && \
    gem install one_gadget && \
    rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

# git installaing package
RUN cd ~/ && \
    git clone https://github.com/pwndbg/pwndbg.git && \
    cd ~/pwndbg/ && ./setup.sh && \
    rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

RUN cd ~ && \
    git clone https://github.com/scwuaptx/Pwngdb.git && \
    cp ~/Pwngdb/.gdbinit ~/

RUN sed -i "1c source /root/pwndbg/gdbinit.py" /root/.gdbinit

ENV LANG C.UTF-8



VOLUME ["/pwn"]
WORKDIR /pwn

CMD ["/bin/bash"]
